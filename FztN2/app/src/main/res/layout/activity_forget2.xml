<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetActivity2">

    <TextView
        android:id="@+id/forgettv"
        android:layout_width="244dp"
        android:layout_height="47dp"
        android:text="Yeni şifre oluştur"
        android:textStyle="bold"
        android:textColor="#03284E"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/forgetsifre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.491" />

    <EditText
        android:id="@+id/forgetsifre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:background="@drawable/input_btn"
        android:drawableLeft="@drawable/lock"
        android:ems="10"
        android:hint="yeni şifre"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textColorHint="#6E6E6E"
        app:layout_constraintBottom_toTopOf="@+id/forgetsifre2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/forgetsifre2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/input_btn"
        android:drawableLeft="@drawable/lock"
        android:ems="10"
        android:hint="yeni şifre tekrar"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textColorHint="#6E6E6E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="318dp" />

    <Button
        android:id="@+id/forgetbutton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kaydet"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:background="@drawable/btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgetsifre2"
        app:layout_constraintVertical_bias="0.165" />

</androidx.constraintlayout.widget.ConstraintLayout>